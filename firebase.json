{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "app",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "index.pug",
      "scripts/**/*",
      "styles/**/*",
      "test/**/*",
      "typings/**/*",
      "jspm.config.js",
      "tsconfig.json",
      "typings.json",
      "jspm_packages/**/*"
    ]
  }
}