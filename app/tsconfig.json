{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"jsx": "react",
		"target": "es2015",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"typeRoots": [
			"typings"
		]
	},
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages"
	]
}